# ======================================
# CONFIGURACIÓN DEL SERVIDOR
# ======================================
NODE_ENV=development
PORT=3002
HOST=0.0.0.0

# ======================================
# BASE DE DATOS - POOL DE ESCRITURA
# ======================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=dbserverine
DB_WRITE_POOL_MIN=5
DB_WRITE_POOL_MAX=100
DB_CONNECTION_LIMIT=100

# ======================================
# BASE DE DATOS - POOL DE LECTURA
# ======================================
DB_READ_HOST=localhost
DB_READ_PORT=3306
DB_READ_USER=root
DB_READ_PASSWORD=your_password_here
DB_READ_NAME=dbserverine
DB_READ_POOL_MIN=10
DB_READ_POOL_MAX=150

# ======================================
# SISTEMA DE CIFRADO (5 CAPAS)
# ======================================
# Capa 1: AES-256-GCM (Principal)
ENCRYPTION_KEY_LAYER1=your_64_char_hex_key_layer1_replace_this_with_real_key_12345
ENCRYPTION_IV_LAYER1=your_32_char_hex_iv_layer1_replace

# Capa 2: AES-256-CBC (Secundaria)
ENCRYPTION_KEY_LAYER2=your_64_char_hex_key_layer2_replace_this_with_real_key_67890
ENCRYPTION_IV_LAYER2=your_32_char_hex_iv_layer2_replace

# Capa 3: ChaCha20 (Alta velocidad)
ENCRYPTION_KEY_LAYER3=your_64_char_hex_key_layer3_replace_this_with_real_key_abcde

# Capa 4: Camellia-256-CBC (Redundancia)
ENCRYPTION_KEY_LAYER4=your_64_char_hex_key_layer4_replace_this_with_real_key_fghij

# Capa 5: XOR con salt rotativo
ENCRYPTION_KEY_LAYER5=your_64_char_hex_key_layer5_replace_this_with_real_key_klmno
ENCRYPTION_SALT=your_random_salt_string_for_layer5_minimum_32_chars

# ======================================
# AUTENTICACIÓN JWT
# ======================================
JWT_SECRET=your_super_secret_jwt_key_minimum_64_characters_long_replace_this
JWT_REFRESH_SECRET=your_super_secret_refresh_key_minimum_64_characters_long_replace
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
JWT_ISSUER=electoral-system
JWT_AUDIENCE=electoral-app

# ======================================
# SEGURIDAD Y RATE LIMITING
# ======================================
# Máximo de intentos de login fallidos antes de bloqueo
MAX_LOGIN_ATTEMPTS=5
# Duración del bloqueo en minutos
LOCKOUT_DURATION=30
# Tiempo de bloqueo de IP por actividad sospechosa (minutos)
IP_BLOCK_DURATION=60
# Máximo de peticiones por minuto por IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ======================================
# CORS
# ======================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ======================================
# CACHÉ
# ======================================
CACHE_TTL_SHORT=120
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=600
CACHE_TTL_STATS=600
CACHE_CHECK_PERIOD=60

# ======================================
# LOGGING
# ======================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# ======================================
# ARCHIVOS Y EXPORTACIÓN
# ======================================
EXPORT_PATH=./exports
EXPORT_MAX_RECORDS=100000
TEMP_FILE_EXPIRATION=3600

# ======================================
# CLUSTERING
# ======================================
CLUSTER_WORKERS=auto
CLUSTER_ENABLED=true

# ======================================
# SEGURIDAD ADICIONAL
# ======================================
# Habilitar protección DDoS
ENABLE_DDOS_PROTECTION=true
# Habilitar firewall de aplicación
ENABLE_WAF=true
# Habilitar detección de anomalías
ENABLE_ANOMALY_DETECTION=true
# Lista blanca de IPs (separadas por coma)
WHITELIST_IPS=127.0.0.1,::1
# Lista negra de IPs (separadas por coma)
BLACKLIST_IPS=

# ======================================
# MONITOREO
# ======================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ======================================
# DESARROLLO
# ======================================
DEBUG_MODE=false
ENABLE_SWAGGER=true
SWAGGER_PORT=3003
